{
    "name": "jerelryoshida-dot/cart-quote-woocommerce-email-tests",
    "description": "Test suite for Cart Quote WooCommerce & Email plugin",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "autoload-dev": {
        "psr-4": {
            "CartQuoteWooCommerce\\Tests\\": "Unit/,Integration/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/",
        "lint": "phpcs --standard=WordPress ../../plugin/src/",
        "lint:fix": "phpcbf --standard=WordPress ../../plugin/src/"
    },
    "config": {
        "sort-packages": true
    }
}
